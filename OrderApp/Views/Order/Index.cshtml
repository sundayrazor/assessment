@model IEnumerable<Order>
@{
   
}
<style>
	td {
		vertical-align: top;
		horiz-align: center;
		font-size: 20px;
	}
	td:nth-child(n) {
		min-width: 184px;
		font-size: 15px;
	}
</style>
<h1>Orders</h1>
<hr/>
<div class="container">
	<div id="Grid">
		<h4>List of all orders</h4>
		<table cellpadding="5" cellspacing="0" style="border: 1pxsolid #ccc;font-size: 9pt;font-family:Arial">
			<tr>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Order ID</th>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Customer Name</th>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Sales Value Excluding VAT</th>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Discount</th>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Sales Value Including VAT</th>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Order Date</th>
				<th style="background-color: #B8DBFD;border: 1px solid #ccc">Details</th>
			</tr>
			@foreach (var order in Model)
			{
				<tr>
					<td style="width:120px;border: 1px solid #ccc">@order.OrderID</td>
					<td style="width:120px;border: 1px solid #ccc">@order.UserID</td>
					<td style="width:120px;border: 1px solid #ccc">@($"R{order.SalesValueExcludingVAT:0.00}")</td>
					<td style="width:120px;border: 1px solid #ccc">@($"R{order.Discount:0.00}")</td>
					<td style="width:120px;border: 1px solid #ccc">@($"R{order.SalesValueIncludingVAT:0.00}")</td>
					<td style="width:120px;border: 1px solid #ccc">@order.OrderDate</td>
					<td style="width:120px;border: 1px solid #ccc"><a class="nav-link text-dark" asp-route-id="@order.OrderID" asp-controller="Order" asp-action="Details">Order Details</a></td>
				</tr>
			}
		</table>
	</div>
</div>

